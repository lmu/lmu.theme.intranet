<div class="document-actions"
     i18n:domain="plone"
     tal:omit-tag=""
     tal:define="ploneview context/@@plone;"
     tal:condition="ploneview/showEditableBorder">

    <tal:block define="view_actions view/prepareObjectTabs;">

        <p class="hiddenStructure"
            tal:condition="view_actions"
            i18n:translate="heading_views">Views</p>


            <tal:views repeat="action view_actions" tal:define="selected action/selected|nothing;">
                <a href=""
                   class="toogle button small"
                   tal:content="action/title"
                   tal:attributes="href action/url;
                                   target action/link_target|nothing;
                                   id string:contentview-${action/id};
                                   class python:attrs['class'] + (selected and ' selected' or ' plain')"
                   i18n:translate="">
                View name
                </a>
            </tal:views>

    </tal:block>
</div>
